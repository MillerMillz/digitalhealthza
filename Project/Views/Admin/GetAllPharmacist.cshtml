@model IEnumerable<Project.Models.Pharmacist>


@{
    ViewData["Title"] = "GetAllDoctor";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/js/delete.js"></script>


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Pharmacist</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard"> Home</a></li>
                    <li class="breadcrumb-item active">Pharmacist</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<a asp-controller="Admin" asp-action="AddPharmacist"> Add New Pharmacist</a>
<section class="content">
    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Pharmacist</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Last Name</th>
                                <th>Contact Number</th>
                                <th>Email Address</th>
                                
                                <th>Registration Number</th>

                                <th>Pharmacy</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var pharmacist in Model)
                            {
                                <tr>

                                    <td>

                                        @pharmacist.PharmacistName


                                    </td>
                                    <td>

                                        <h6> @pharmacist.PharmacistSurname</h6>
                                    </td>
                                   


                                    <td class="project-state">
                                        @pharmacist.RegNo
                                    </td>
                                    <td class="project_progress">
                                        @pharmacist.PharmacyID
                                    </td>
                                   



                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="ViewPharmacist" asp-route-id="@pharmacist.PharmacistID">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getpharmacistedit" asp-route-id="@pharmacist.PharmacistID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger" asp-controller="admin" asp-action="DeletePharmacist" asp-route-id="@pharmacist.PharmacistID" onclick="return confirm('Are you sure you want to delete this Doctor?');">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                    <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="dashboard">
                        <i class="fas btn-default">
                        </i>
                        Back
                    </a>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>


</section>


<script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
        });
    });
</script>