@model IEnumerable<Project.Models.MedPractice>


@{
    ViewData["Title"] = "GetAllPractice";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@*<a asp-controller="Regional" asp-action="AddCreche"> Add New Note</a>*@
<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Practice</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard"> Home</a></li>
                        <li class="breadcrumb-item active">Practice</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <a asp-controller="Admin" asp-action="AddCreche"> Add New Practice</a>
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Practice</h3>

                
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                
                            </th>
                            <th style="width: 20%">
                               Practice Name
                            </th>
                            <th style="width: 20%">
                                Address
                            </th>

                            <th style="width: 20%">
                                Contact Number
                            </th>
                            <th style="width: 20%">
                                Email Address
                            </th>
                            <th style="width: 20%">
                                Practice Number
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var practice in Model)
                        {
                        <tr>
                            <td>

                                <h6>@practice.PracticeID</h6>
                            </td>
                            <td>

                                @practice.PracticeName

                            </td>

                            <td>
                                @practice.AddressLine1 <br />
                                @practice.AddressLine2 <br />
                                @practice.CityID
                                @practice.SurburbID
                            </td>
                            <td class="project_progress">
                                @practice.ContactNo
                            </td>
                            <td class="project-state">
                                @practice.Email
                            </td>
                            <td class="project-state">
                                @practice.PracticeNo
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="ViewPractice" asp-route-id="@practice.PracticeID">
                                    <i class="fas fa-folder">
                                    </i>
                                    View
                                </a>
                                <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getpracticeedit" asp-route-id="@practice.PracticeID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger" asp-controller="admin" asp-action="DeletePractice" asp-route-id="@practice.PracticeID" onclick="return confirm('Are you sure you want to delete this Center?');">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                        }






                </table>
                <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="Dashboard">
                    <i class="fas btn-default">
                    </i>
                    Back
                </a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>