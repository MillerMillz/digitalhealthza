@model Project.Models.ActiveIngredient
@{
    ViewData["Title"] = "AddActiveIngredient";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<form asp-controller="Admin" asp-action="AddActiveIngredient" method="post">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Add Active Ingredient</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Home</a></li>
                        <li class="breadcrumb-item active"> Add Active Ingredient</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content" style=" padding-left: 16px; padding-right: 16px;">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">

                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="ActiveIngredientName">Active Ingredient</label>
                            <input required type="text" asp-for="ActiveIngredientName" id="inputName" class="form-control">
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <br /><br /><br /><br /><br /><br />
            <div class="col-md-5">
                <div class="card card-secondary">

                    <div>
                        <img src="~/Landing/assets/img/Active Ingridients.jpg" />
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
      
        <div class="row">
            <div class="col-12">
                <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getallactiveingredient">
                    <i class="fas btn-default">
                    </i>
                    Back
                </a>


                <button type="submit" value="Add Active Ingredient" asp-controller="admin" asp-action="AddActiveIngredient" class="btn btn-success float-right">Add New Active Ingredient</button>
            </div>
        </div>
    </section>





</form>


