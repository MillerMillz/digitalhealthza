@model Project.Models.ConditionDiagnosis
@{
    ViewData["Title"] = Model != null ? "EditCondition" : "AddCondition";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<form asp-controller="admin" asp-action=@ViewData["Title"] method="post">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Update Condition</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Update Condition</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"></h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="ID" />
                        <div class="form-group">
                            <label asp-for="DiagnosisName">Diagnosis Name</label>
                            <input asp-for="DiagnosisName" type="text" id="programName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="ICD10Code" class="control-label">ICD-10 Code</label>
                            <textarea asp-for="ICD10Code" class="form-control" rows="7"></textarea>
                        </div>

                    </div>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getallcondition">
                    <i class="fas btn-default">
                    </i>
                    Back
                </a>
                <input type="submit" value="Update Program" class="btn btn-success float-right">
            </div>
        </div>
    </section>

</form>
