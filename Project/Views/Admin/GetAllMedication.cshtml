@model IEnumerable<MedActive>


@{
    ViewData["Title"] = "GetAllMedication";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Medication</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="admin" asp-action="Dashboard"> Home</a></li>
                        <li class="breadcrumb-item active">Medication</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <a asp-controller="Admin" asp-action="AddMedication"> Add New Medication</a>
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Medication</h3>

                
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">

                            </th>
                            <th style="width: 20%">
                                Medication Name
                            </th>
                            <th style="width: 20%">
                                Schedule
                            </th>

                            @*<th style="width: 20%">
                        Creche Leader
                    </th>*@
                            <th style="width: 20%">
                                Dosage Form
                            </th>
                            <th style="width: 20%">
                                Active Ingredients
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var medication in Model)
                        {
                            <tr>
                                <td>

                                    <h6>@medication.Medication.ID</h6>
                                </td>
                                <td>
                                    <a>
                                        @medication.Medication.MedicationName
                                    </a>
                                    <br />
                                    @*<small>
                                        Creche Leader:
                                        @medication.DosageForm
                                    </small>*@
                                </td>
                                <td>
                                    Active Ingredients <span>Active Ingredients</span>
                                    @{ for (int i = 0; i < medication.ActiveIngredients.Count; i++)
                                        {


                                            @medication.ActiveIngredients[i].ActiveIngredientName <br />
                                        } }

                                </td>


                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="ViewMedication" asp-route-id="@medication.ID">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getmedicationedit" asp-route-id="@medication.ID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger" asp-controller="admin" asp-action="DeleteMedication" asp-route-id="@medication.ID" onclick="return confirm('Are you sure you want to delete this Center?');">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }






                </table>
                <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="dashboard">
                    <i class="fas btn-default">
                    </i>
                    Back
                </a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>