@model Project.Models.Doctor
@{
    ViewData["Title"] = "ViewDoctor";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Doctor's Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard"> Home</a></li>
                    <li class="breadcrumb-item active">Doctor's Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content" style=" padding-left: 16px; padding-right: 16px;">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"></h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title">Title:</label><br />
                        @Model.Title

                    </div>
                    <div class="form-group">
                        <label asp-for="DoctorName">First Name:</label><br />

                        @Model.DoctorName
                    </div>
                    <div class="form-group">
                        <label asp-for="DoctorSurname">Last Name:</label><br />
                        @Model.DoctorSurname
                    </div>

                    <div class="form-group">
                        <label asp-for="Gender">Gender:</label><br />

                        @Model.Gender
                    </div>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-6">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"></h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <br />
                        <label asp-for="HCRegNo">Health Council Reg No: </label><br />
                        @Model.HCRegNo
                    </div>

                    
                   
                    <div class="form-group">
                        <br />
                        <label asp-for="MedPracticeID">Practice Number: </label><br />
                        @Model.HighestQualificationID
                    </div>
                    <div class="form-group">
                        <br />
                        <label asp-for="HighestQualificationID">Highes tQualification: </label><br />
                        @Model.HighestQualificationID
                    </div>
                    <div class="card-body" align="center" width:"60%">
                        <img src="~/AdminLTE-3.0.2/dist/img/NMB Logo1.jpeg" />

                    </div>

                </div>

            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getallDoctor">
                <i class="fas btn-default">
                </i>
                Back
            </a>
        </div>
    </div>
</section>

