@model IEnumerable<Project.Models.Doctor>


@{
    ViewData["Title"] = "GetAllDoctor";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/js/delete.js"></script>


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Doctors</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard"> Home</a></li>
                    <li class="breadcrumb-item active">Doctor</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<a asp-controller="Admin" asp-action="AddDoctor"> Add New Doctor</a>
<section class="content">
    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Doctors</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Last Name</th>
                                <th>Contact Number</th>
                                <th>Email Address</th>
                                <th>Highest Qualification </th>
                                <th>Practice Number</th>

                                <th>Health Council Registration Number</th>
                                
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var doctor in Model)
                            {
                            <tr>

                                <td>

                                    @doctor.DoctorName


                                </td>
                                <td>

                                    <h6> @doctor.DoctorSurname</h6>
                                </td>
                                


                                <td class="project-state">
                                    @doctor.HighestQualificationID
                                </td>
                                <td class="project_progress">
                                    @doctor.MedPracticeID
                                </td>
                                <td class="project-state">
                                    @doctor.HCRegNo
                                </td>
                               


                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="ViewDoctor" asp-route-id="@doctor.DoctorID">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="getdoctoredit" asp-route-id="@doctor.DoctorID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger" asp-controller="admin" asp-action="DeleteDoctor" asp-route-id="@doctor.DoctorID" onclick="return confirm('Are you sure you want to delete this Doctor?');">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            }

                        </tbody>

                    </table>
                    <a class="btn btn-info btn-sm" asp-controller="admin" asp-action="dashboard">
                        <i class="fas btn-default">
                        </i>
                        Back
                    </a>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>


</section>


<script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
        });
    });
</script>