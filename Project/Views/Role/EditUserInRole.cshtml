@model List<UserRoleViewModel>
@{ Layout = "_LayoutMil";}

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card ">
        <div class="card-header">
            <h2>Add or remov users from this roole</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" value="Update" class="btn btn-primary" style="width:auto" >Submit</button>
            <a class="btn btn-primary" style="width:auto" asp-action="EditRole" asp-route-id="@roleId">Cancel</a>
        </div>
    </div>
</form>