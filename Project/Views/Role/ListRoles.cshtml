@model IEnumerable<IdentityRole>
@{ Layout = "_LayoutMil";}

@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" asp-controller="Role" method="post">
                    <a class="btn btn-primary" asp-action="EditRole" asp-controller="Role"
                       asp-route-id="@role.Id">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header"> No roles created Yet</div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to crete a role
            </h5>
            <a class="btn btn-primary" asp-action="CreateRole" asp-controller="Role" style="width:auto">
                Create Role
            </a>
        </div>
    </div>
}